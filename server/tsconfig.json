{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./shared/*"]
    }
  },
  "include": ["index.ts", "routes.ts", "db.ts", "storage.ts", "drizzle.config.ts", "services/**/*.ts", "shared/**/*.ts"],
  "exclude": ["node_modules", "dist", "vite.ts", "**/*.config.ts"]
}
